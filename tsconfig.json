  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es6",
    "outDir": "./dist",
    "module": "commonjs",
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "module": "esnext"
  },
  "exclude": [
    "node_modules",
    "public"
  ]
}
