{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "esnext",
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "module": "esnext",
    "paths": {
      "$backend*": ["./app*"],
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"],
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "public"],
  "extends": "./.svelte-kit/tsconfig.json"
}
