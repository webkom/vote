{
    "extends": "webkom",
    "rules": {
        "indent": [2, 4],
        "vars-on-top": 0,
        "no-var": 0,
        "prefer-arrow-callback": 0,
        "prefer-template": 0,
        "object-shorthand": 0,
        "new-cap": [2, {
            "capIsNewExceptions": [
                "Router",
                "Before",
                "BeforeFeatures",
                "AfterFeatures",
                "Then",
                "When",
                "Given"
            ]
        }]
    },
    "env": {
        "mocha": true,
        "node": true,
        "protractor": true,
        "browser": true
    },
    "globals": {
        "angular": true,
        "io": true,
        "chrome": true
    }
}
