form
    button
        margin-top 10px

    i
        margin-left 10px
        color $abakus-light

        &:hover
            cursor pointer
            color $abakus-dark

    input[type='checkbox']
        transform scale(1.5)
        margin-left 10px

.user-status
    color $abakus-light

    i
        font-size 20px
        color $font-gray
        margin-left 10px

.election-info.admin
    margin-bottom 30px

.elections-list
    width 100%

    span
        padding 10px

    ul
        list-style none
        padding 0

    ul li
        &:hover
            cursor default
            background-color alpha($alternative-background, 0.15)

    div
        display flex
        justify-content space-between

.toggle-election
    width 30%
    margin-top 20px

.input-group-addon
    font-size 18px
    color $abakus-light

    &:hover
        cursor pointer
        color $abakus-dark

.alternatives.admin
    padding-top 10px
    margin-bottom 0


    ul li
        position relative

        &:hover
            cursor default
            background-color alpha($alternative-background, 0.15)

        span
            position absolute
            right 20px
            color $abakus-dark


.toggle-show
    margin-left 30px

    &.alone
        margin-left 0

form.add-alternative
    input
        text-align center
        font-size 21px
        line-height 60px
        height 60px

    button
        margin-top 20px
        font-size 16px
        color $font-gray

@media (max-width 1000px)
    .toggle-show
        margin-left 0

.big
  font-size 50px
  text-align center

.animated-alert.ng-enter
    transition 0.3s ease all;
    opacity: 0;

.animated-alert.ng-enter.ng-enter-active
    opacity: 1;

.animated-alert.ng-leave
    transition 1s all;
    max-height: 200px;

.animated-alert.ng-leave.ng-leave-active
    max-height: 0;
    opacity: 0;

@keyframes zoom {
    0% {
        transform:scale(1);
    }
    100% {
        transform:scale(0.3);
    }
}
.animated-qr
    animation-name: zoom
    animation-duration: 4s
    animation-iteration-count: infinite
    animation-direction: alternate
