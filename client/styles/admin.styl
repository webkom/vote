form
    button
        margin-top 10px

    i
        margin-left 10px
        color $abakus-light

        &:hover
            cursor pointer
            color $abakus-dark

.user-status
    color $abakus-light

    i
        font-size 20px
        color $font-gray
        margin-left 10px

.election-info.admin
    margin-bottom 30px

.toggle-election
    width 30%
    margin-top 20px

.input-group-addon
    font-size 18px
    color $abakus-light

    &:hover
        cursor pointer
        color $abakus-dark

.alternatives.admin
    padding-top 10px
    margin-bottom 0


    ul li
        position relative

        &:hover
            cursor default
            background-color alpha($alternative-background, 0.15)

        span
            position absolute
            right 20px
            color $abakus-dark


.toggle-show
    margin-left 30px

    &.alone
        margin-left 0

form.add-alternative
    input
        text-align center
        font-size 21px
        line-height 60px
        height 60px

    button
        margin-top 20px
        font-size 16px
        color $font-gray

@media (max-width 1000px)
    .toggle-show
        margin-left 0
