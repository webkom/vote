.election-info
    margin-bottom 40px

    h2
        text-transform uppercase

.helptext
    line-height 60px

.alternatives
    margin-bottom 30px
    border-top 1px solid rgba(177, 181, 188, 0.3)
    padding-top 40px

    h3
        margin-bottom 25px

    button.btn
        color $abakus-light
        margin-top 30px
        min-width 30%
        transition all 0.4s

        &:disabled
            color $font-gray

        &:hover
            border-color #ccc
            background-color #f9f9f9
            color $abakus-dark

    ul li
        margin-bottom 10px
        line-height 60px
        border-radius 2px
        border 1px solid transparent
        background-color alpha($alternative-background, 0.15)

        &:hover
            cursor pointer
            border 1px solid alpha($alternative-background, 0.15)
            background-color alpha($alternative-background, 0.05)

            p
                color $abakus-light
                opacity 1

        &.selected
            background-color alpha($alternative-background, 0.4)

            p
                color white

        p
            color darken($font-gray, 20%)
            text-transform uppercase
            margin-bottom 0
            font-weight 200
            transition color 0.3s
            vertical-align middle
    .numbered
        counter-reset item

        .sortable-drag
            display none

        li
            display inline-block
            counter-increment item
            position relative
            width 90%

            &:before
                position absolute
                top 0
                left -25px
                margin-right 10px
                content counter(item)
                font-size 35px
                color $abakus-dark
                display inline-block
                text-align center

@media (max-width 1000px)
    .alternatives
        button.btn
            min-width 60%
