
@import url('https://fonts.googleapis.com/css?family=Raleway:300,200,100')
@import url('https://fonts.googleapis.com/css2?family=Cutive+Mono&display=swap');

$font-gray = #666c77
$alternative-background = darken($font-gray, 20%)
$dark-gray = #333
$abakus-light = #cc0000
$abakus-dark = #bd0005
$red = #b11b11
$white = #fdfdfd

html
    min-height 100%
    position relative

body
    font-family 'Raleway', 'Lucida Grande'
    font-weight 300
    word-break break-word
    margin-bottom 30px
    color $font-gray

header
    width 100%
    border-bottom 2px solid #e0e0e0
    margin-bottom 20px

    nav ul
        padding-top 10px
        padding-bottom 20px
        text-align center
        width 100%
        margin 0 auto

        li
            &:not(:first-child)
                padding-left 20px

            display inline

            a
                font-size 20px
                color $font-gray

                &:hover
                    color $abakus-light

                &:focus
                    text-decoration none

.header
    text-align center
    font-size 60px
    font-weight 100
    padding-top 50px

    img
        margin-right 15px
        width 35px

footer
    position absolute
    height 30px
    width 100%
    margin 0 auto
    bottom 0

    a
        color $abakus-light

        &:hover
            color $abakus-dark

a
    color $abakus-light

    &:hover, &:focus
        color $abakus-dark
        text-decoration none

h2, h3, .btn
    font-weight 300

hr
  margin 10px 0

.alert
    margin 15px auto
    max-width 90%

.text-danger
    font-size 18px

.container
    width 100%

.center
    max-width 750px
    margin 0 auto
    font-size 21px

.mono
  font-family 'Cutive Mono', monospace
  font-size 16px

label
    font-weight 300
    font-size 20px
    letter-spacing 0.1em

.fade
    transition opacity 0.5s
    opacity 0

.btn
    font-size 20px
    &:active:focus
        outline none

    &:focus
        outline none

.vote-result-form
    margin 0 auto

    input
        margin 10px auto
        text-align center
        width 70%

.vote-result-feedback
    margin-top 30px

    p
        font-size 18px

.form-control
    font-size 18px
    height 40px

.hidden
    display none

@media (max-width 1000px)
    .vote-result-form
        input
          width 100%

    .header
        padding-top 0

    footer
        padding-top 20px

.usage-flex
  display flex
  justify-content space-between
  margin 0 10px

  a
    align-self flex-end

.th-right
  text-align right
  width 50%

.th-left
  text-align left
  width 50%


.cs-tooltip
    position relative
    display inline-block
    border-bottom 1px dotted black

    .cs-tooltiptext
        visibility hidden
        width 120px
        bottom 130%
        left 50%
        margin-left -60px
        background-color black
        color #fff
        text-align center
        padding 5px 0
        border-radius 6px
        position absolute
        z-index 1

        &::after
              content " "
              position absolute
              top 100%
              left 50%
              margin-left -5px
              border-width 5px
              border-style solid
              border-color black transparent transparent transparent

    &:hover
        .cs-tooltiptext
            visibility visible


@import 'election'
@import 'admin'
